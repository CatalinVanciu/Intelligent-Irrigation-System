<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralView">

    <!--    TO DO: TRY TO MAKE A GRADIENT PROGRESS BAR-->

    <Button
        android:id="@+id/manualButton"
        android:layout_width="154dp"
        android:layout_height="51dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="11dp"
        android:text="@string/manual"
        app:layout_constraintBottom_toTopOf="@+id/requiredWaterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waterProgressBar" />

    <Button
        android:id="@+id/requiredWaterButton"
        android:layout_width="219dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp"
        android:text="@string/required_water"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewWaterProgressBar" />

    <ProgressBar
        android:id="@+id/waterProgressBar"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="88dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="470dp"
        app:layout_constraintBottom_toTopOf="@+id/manualButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="0" />

    <ProgressBar
        android:id="@+id/LightProgressBar"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="88dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="470dp"
        app:layout_constraintBottom_toTopOf="@+id/manualButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:progress="0" />

    <ProgressBar
        android:id="@+id/HumidityProgressBar"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="88dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="470dp"
        app:layout_constraintBottom_toTopOf="@+id/manualButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:progress="0" />

    <TextView
        android:id="@+id/viewWaterProgressBar"
        android:layout_width="47dp"
        android:layout_height="52dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="543dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@string/_0"
        android:textColor="@color/DodgerBlue"
        android:textColorHint="@color/DodgerBlue"
        app:layout_constraintBottom_toTopOf="@+id/requiredWaterButton"
        app:layout_constraintEnd_toEndOf="@+id/waterProgressBar"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="@+id/waterProgressBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewLightProgressBar"
        android:layout_width="47dp"
        android:layout_height="52dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="543dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@string/_0"
        android:textColor="@color/Chartreuse"
        android:textColorHint="@color/Chartreuse"
        app:layout_constraintBottom_toTopOf="@+id/requiredWaterButton"
        app:layout_constraintEnd_toEndOf="@+id/LightProgressBar"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="@+id/LightProgressBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/viewHumidityProgressBar"
        android:layout_width="47dp"
        android:layout_height="52dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="543dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@string/_0"
        android:textColor="@color/CadmiumRed"
        android:textColorHint="@color/CadmiumRed"
        app:layout_constraintBottom_toTopOf="@+id/requiredWaterButton"
        app:layout_constraintEnd_toEndOf="@+id/HumidityProgressBar"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="@+id/HumidityProgressBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>